@page
@model IndexModel
@{
    ViewData["Title"] = "Студенты";
}

<h1>@ViewData["Title"]</h1>

<p><a asp-page="./Add" class="btn btn-sm btn-outline-primary">Добавить студента</a>

<div class="table-responsive">
    <table class="table">
        <thead class="align-top">
            <tr>
                <th scope="col">#</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Students[0].FullName)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Students[0].Cource)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Students[0].AcademicGroupName)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Students[0].CommandId)</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                <tr>
                        <th scope="row">@student.Id</th>
                        <td>@Html.DisplayFor(x => student.FullName)</td>
                        <td>@Html.DisplayFor(x => student.Cource)</td>
                        <td>@Html.DisplayFor(x => student.AcademicGroupName)</td>
                        <td>@Html.DisplayFor(x => student.CommandId)</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-page="./Edit" asp-route-id="@student.Id">Изменить</a>
                        <a class="btn btn-sm btn-danger" asp-page="./Remove" asp-route-id="@student.Id">Удалить</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>